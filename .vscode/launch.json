  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "processId": "${command:PickProcess}",
      "sourceMaps": true,
      "restart": true,
      "protocol": "inspector"
    },
    {
      "type": "bun",
      "request": "launch",
      "name": "bun: test-service",
      "program": "${workspaceFolder}/src/index.ts",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8080
      },
      "strictEnv": false,
      "watchMode": "hot",
      "stopOnEntry": true,
      "noDebug": false,
      "runtime": "bun",
      "runtimeArgs": []
    }
  ]
}
